<!DOCTYPE html>
<html>
<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
</head>
<body>
  <script>
    function setup() {
      createCanvas(800, 800); // Tamaño del lienzo
      
      background(0); // Fondo negro
      
      noLoop(); // Detener el dibujo automático
    }

    function draw() {
      const maxIterations = 100; // Número máximo de iteraciones
      const zoom = 200; // Nivel de zoom para el fractal
      
      for (let x = -width/2; x < width/2; x++) {
        for (let y = -height/2; y < height/2; y++) {
          let a = x / zoom;
          let b = y / zoom;
          
          let ca = a;
          let cb = b;
          
          let n = 0;
          while (n < maxIterations) {
            let aa = a * a - b * b;
            let bb = 2 * a * b;
            
            a = aa + ca;
            b = bb + cb;
            
            if (a + b > 16) {
              break;
            }
            
            n++;
          }
          
          let color = map(n, 0, maxIterations, 0, 255);
          stroke(color); // Color basado en el número de iteraciones
          point(x + width/2, y + height/2); // Dibuja un punto
        }
      }
    }
  </script>
</body>
</html>